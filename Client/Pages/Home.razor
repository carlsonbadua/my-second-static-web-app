@page "/"
@using System.Net.Http
@using System.Net.Http.Json
@inject HttpClient Http


<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

<p> _Hello family, dito niyo masusubaybayan ang progress ko sa paggawa ng website 😛</p>

